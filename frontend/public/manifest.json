{
	"manifest_version": 3,
	"name": "WhatsApp Contact Sync",
	"version": "1.0",
	"permissions": ["scripting", "activeTab", "tabs", "storage"],
	"host_permissions": ["https://web.whatsapp.com/*"],
	"action": {
		"default_popup": "index.html"
	},
	"background": {
		"service_worker": "background.js"
	},
	"content_scripts": [
		{
			"matches": ["https://web.whatsapp.com/*"],
			"js": ["content.js"]
		}
	]
}
