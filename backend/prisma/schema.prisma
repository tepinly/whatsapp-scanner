generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(uuid())
  name      String
  phone     String    @unique
  contacts  Contact[]
  syncLogs  SyncLog[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Contact {
  id         String    @id @default(uuid())
  user       User      @relation(fields: [userId], references: [id])
  userId     String
  name       String
  profilePic String?
  metadata   Metadata?
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt

  @@unique([userId, name])
}

model Metadata {
  contactId       String    @id
  contact         Contact   @relation(fields: [contactId], references: [id])
  lastInteraction DateTime?
  messageCount    Int?
}

model SyncLog {
  id       String   @id @default(uuid())
  user     User     @relation(fields: [userId], references: [id])
  userId   String
  syncedAt DateTime @default(now())
}
